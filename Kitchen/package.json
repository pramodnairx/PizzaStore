{
  "name": "kitchen",
  "version": "1.0.0",
  "description": "Kitchen service for the Pizza store",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir ./dist",
    "test": "export NODE_ENV=test && mocha --timeout 60000 --recursive ./dist/test/*.js --exit",
    "integration-test": "export NODE_ENV=integration-test && mocha --timeout 60000 --recursive ./dist/test/integration-test/*.js --exit",
    "build": "rm -rf ./dist && mkdir ./dist && npx tsc --build --clean && npx tsc",
    "start": "node dist/service/adapters/kitchen-service-kafka.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/service/kitchen-service-kafka.js\""
  },
  "author": "Pramod Nair",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.3.3",
    "body-parser": "^1.20.1",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.3.0",
    "inversify": "^6.0.1",
    "kafkajs": "^2.2.4",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/config": "^3.3.0",
    "@types/express": "^4.17.16",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "concurrently": "^7.6.0",
    "mocha": "^10.2.0",
    "mongoose": "^6.9.0",
    "nodemon": "^2.0.20",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5"
  }
}
